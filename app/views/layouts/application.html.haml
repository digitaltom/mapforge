!!!
%html{ lang: 'en' }
  %head
    %title= content_for?(:title) ? yield(:title) : 'mapforge.org'
    %meta{ charset: "UTF-8"}
    %meta{ content: 'width=device-width,initial-scale=1', name: 'viewport' }

    = csrf_meta_tags
    = csp_meta_tag

    / fonts
    / https://icons.getbootstrap.com/
    %link{rel: "stylesheet", href: "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css", type: "text/css"}
    / Logo font
    %link{rel: "stylesheet", href: "https://fonts.googleapis.com/css2?family=IM+Fell+Great+Primer+SC&display=swap", type: "text/css"}

    / css
    %link{rel: "stylesheet", href: "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", type: "text/css", crossorigin: "anonymous"}
    / maptiler-sdk.css include maplibre-gl css
    %link{rel: "stylesheet", href: "https://cdn.maptiler.com/maptiler-sdk-js/v2.1.0/maptiler-sdk.css", type: "text/css"}
    %link{rel: "stylesheet", href: "https://www.unpkg.com/@mapbox/mapbox-gl-draw@1.4.3/dist/mapbox-gl-draw.css", type: "text/css"}
    %link{rel: "stylesheet", href: "https://cdn.maptiler.com/maptiler-geocoding-control/v1.2.0/style.css", type: "text/css"}

    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags

    = javascript_include_tag "https://unpkg.com/@turf/turf@6/turf.min.js"
    = javascript_include_tag "https://unpkg.com/deck.gl/dist.min.js"
    / https://github.com/maplibre/maplibre-gl-js
    = javascript_include_tag "https://unpkg.com/maplibre-gl@^4.4/dist/maplibre-gl.js"
    / https://github.com/maptiler/maptiler-sdk-js/releases
    = javascript_include_tag "https://cdn.maptiler.com/maptiler-sdk-js/v2.1.0/maptiler-sdk.umd.min.js"
    / https://github.com/mapbox/mapbox-gl-draw
    = javascript_include_tag "https://www.unpkg.com/@mapbox/mapbox-gl-draw@1.4.3/dist/mapbox-gl-draw.js"
    = javascript_include_tag "https://www.unpkg.com/@mapbox/togeojson"
    / https://github.com/maptiler/maptiler-geocoding-control
    = javascript_include_tag "https://cdn.maptiler.com/maptiler-geocoding-control/v1.2.4/maplibregl.umd.js"

    = yield(:head)

  %body
    = Gon::Base.render_data

    = yield

