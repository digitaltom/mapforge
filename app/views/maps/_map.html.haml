%div{class: "w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/6 map-preview mx-3", id: dom_id(map)}
  = link_to map do
    - if File.exist?(Rails.root.join("public/maps/#{map.id}.png"))
      %img{src: "/maps/#{map.id}.png", class: 'preview-image', loading: "lazy"}
    - else
      %img{src: "map.png", class: 'preview-image'}
    .map-preview-title= map.properties[:name]
  %i= "last change #{distance_of_time_in_words(Date.current, map.updated_at)} ago"
