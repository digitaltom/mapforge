.map-preview{id: dom_id(map)}
  = link_to(map_path(id: map.public_id), 'aria-label': 'Open map') do
    - if File.exist?(Rails.root.join("public/previews/#{map.public_id}.png"))
      %img{src: "/previews/#{map.public_id}.png",
           class: 'preview-image',
           loading: 'lazy',
           alt: "Map '#{map.name}'"}
    - else
      = image_tag "preview.png", class: 'preview-image', loading: 'lazy', alt: "Map '#{map.name}'"
    .map-preview-title= map.name
  %i= "last change #{distance_of_time_in_words(DateTime.now, map.updated_at)} ago"
