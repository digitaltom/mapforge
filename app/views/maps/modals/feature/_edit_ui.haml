#feature-edit-ui.hidden
  %textarea#feature-desc

  %button.feature-update{ 'data-action': "click->feature#updateDesc"}
    Update Description

  #point-size-ui.edit-ui.edit-point
    %label{ for: "point-size"} Point Size:
    %input.slider#point-size{ type: "range", min: "1", max: "50", value: "1", 'data-action': "input->feature#updatePointSize  change->feature#saveFeature"}


  #line-width-ui.edit-ui.edit-line.edit-polygon
    %label{ for: "line-width"} Line Width:
    %input.slider#line-width{ type: "range", min: "1", max: "50", value: "1", 'data-action': "input->feature#updateLineWidth change->feature#saveFeature"}
