#layers-modal.map-modal.fade{'data-controller': "layers"}

  .map-modal-header
    %h2
      %i.bi.bi-arrow-left.link.mr-2{ data: { action: "click->layers#close" } }
      Layers

  .map-modal-content
    %input#fileInput{ type: "file" }
    %button.btn.btn-secondary{ data: { action: "click->layers#upload" } }
      Import gpx/kml

    #default-layer
      %h4.layer-name Default Layer
      %ul.layer-elements


